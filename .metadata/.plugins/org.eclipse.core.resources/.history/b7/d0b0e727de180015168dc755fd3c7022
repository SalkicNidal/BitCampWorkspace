package ba.bitcamp.interfaces.exercise.tasks;

public class Line  implements Shape, Drawable{

	private int length;
	
	
	
	public Line(int length) {
		super();
		this.length = length;
	}

	@Override
	public int getCircumference() {
	
		return length;
	}

	@Override
	public int getArea() {
		
		return 0;
	}

	@Override
	public void drawOnConsole() {
	
		for ( int i = 0; i < length; i++){
			
			System.out.print("*");
		}
		
	}

	
}
